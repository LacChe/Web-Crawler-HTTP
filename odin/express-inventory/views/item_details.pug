extends layout

block content
  h1= title

  h2= item.name
  p= item.description
  p Category: 
    a(href=item.category.url) #{item.category.name}
  p Price: #{item.price}
  p Number In Stock: #{item.numberInStock}
  hr
  p
    a(href=item.url+'/delete') Delete Item
  p
    a(href=item.url+'/update') Update Item