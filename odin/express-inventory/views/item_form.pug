extends layout

block content
  h1 #{title}

  form(method='POST' action='')
    div.form-group
      label(for='name') Item:
      input#name.form-control(type='text', name='name' value=(undefined===item ? '' : item.name))
      label(for='description') Description:
      input#description.form-control(type='text', name='description' value=(undefined===item ? '' : item.description))
      label(for='price') Price:
      input#price.form-control(type='number', name='price' value=(undefined===item ? '' : item.price))
      label(for='number_in_stock') Number in Stock:
      input#number_in_stock.form-control(type='number', name='number_in_stock' value=(undefined===item ? '' : item.numberInStock))
    
    div.form-group
      label(for='category') Category:
      select#status.form-control(type='select' placeholder='Select category' name='category' required='true')
        for category in categories
            option(value=category._id)= category.name 

    button.btn.btn-primary(type='submit') Submit

  if errors
   ul
    for error in errors
     li!= error.msg
