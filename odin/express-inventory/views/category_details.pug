extends layout

block content
  h1= title

  h2= category.name
  p= category.description

  ul
    each item in items_list
      li
        a(href=item.url) #{item.name}
        |  (#{item.description})
        |  Price: (#{item.price})
        |  Number In Stock: (#{item.numberInStock})
    else
      li There are no items in this category.
  hr
  p
    a(href=category.url+'/delete') Delete Category
  p
    a(href=category.url+'/update') Update Category